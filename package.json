{
  "name": "vidly-backend",
  "version": "1.0.0",
  "license": "ISC",
  "repository": "https://github.com/perpetual-pelican/vidly-backend.git",
  "description": "Node-based backend api for video rental processing - built with Express and MongoDB/Mongoose",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "db": "npx run-rs -v 4.4.6",
    "seed": "node seed.js",
    "start": "node index.js",
    "test": "jest --coverage",
    "prepare": "husky install",
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "joi": "^17.4.0",
    "joi-objectid": "^3.0.1",
    "joi-password-complexity": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "mongoose": "^5.12.14",
    "winston": "^3.3.3",
    "winston-mongodb": "^5.0.7"
  },
  "devDependencies": {
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "~6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "mongodb-memory-server": "^7.3.0",
    "prettier": "2.3.1",
    "pretty-quick": "^3.1.1",
    "run-rs": "^0.7.4",
    "supertest": "^6.1.3"
  },
  "engines": {
    "node": ">=8.10.0",
    "npm": ">=5.2.0"
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "4.4.6"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "globalSetup": "./.jest/globalSetup.js",
    "globalTeardown": "./.jest/globalTeardown.js",
    "setupFiles": [
      "./.jest/setEnvVars.js"
    ],
    "verbose": true
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --fix"
  },
  "prettier": {
    "singleQuote": true
  }
}
