{
  "env": {
    "node": true,
    "es2020": true,
    "jest": true
  },
  "extends": ["airbnb-base", "prettier"],
  "rules": {
    "consistent-return": "off",
    "no-underscore-dangle": "off"
  },
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "rules": {
        "global-require": "off",
        "import/no-extraneous-dependencies": "off"
      }
    }
  ]
}
